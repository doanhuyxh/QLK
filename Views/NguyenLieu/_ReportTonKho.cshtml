@using System.Globalization;
@{
    Layout = "~/Views/Shared/_Report.cshtml";

}


<h1 class="text-dark" style="font-size:16pt">Công ty VIT GARMENT</h1>
<h2 class="text-dark" style="font-size:16pt">Tại kho: {{khoName}}</h2>
<h2 class="text-dark" style="font-size:16pt">Địa chỉ: Hà Nội</h2>
<h1 class="text-center" style="font-size:16pt">Báo cáo tồn kho </h1>
<h1 class="text-center text-primary" style="font-size:16pt">từ ngày {{startDate.split("-").reverse().join("-")}} đến ngày {{endDate.split("-").reverse().join("-")}}</h1>

<table class="table">
    <tr class="table-primary">
        <th rowspan="2" class="text-center" style="font-size:10pt">STT</th>
        <th rowspan="2" class="" style="font-size:10pt">Mã Nguyên Liệu</th>
        <th rowspan="2" class="" style="font-size:10pt">Tên Kho</th>
        <th rowspan="2" class="" style="font-size:10pt">Nguyên liệu</th>
        <th rowspan="2" class="" style="font-size:10pt">Màu</th>
        <th rowspan="2" class="" style="font-size:10pt">Size</th>
        <th rowspan="2" class="" style="font-size:10pt">Đơn vị tính </th>
        <th rowspan="2" class="" style="font-size:10pt">Tồn đầu kỳ </th>
        <th rowspan="2" class="" style="font-size:10pt">Tổng số lượng nhập</th>
        <th rowspan="2" class="" style="font-size:10pt">Tổng số lượng xuất</th>
        <th rowspan="2" class="" style="font-size:10pt">Tồn cuối kỳ</th>


    </tr>
    <tbody>
        <tr v-for="(item, index) in backupItem">
            <td class="text-center">{{index+1}}</td>
            <td class="">{{item.MaNguyenLieu}}</td>
            <td class="">{{item.khoName}}</td>
            <td class="">{{item.TenNguyenLieu}}</td>
            <td class="">{{item.Mau}}</td>
            <td class="">{{item.Size}}</td>
            <td class="">{{item.DonViTinh}}</td>
            <td class="">{{Math.abs(item.TongXuatDauKy - item.TongNhapDauKy)}}</td>
            <td class="">{{item.TongNhapTrongKy}}</td>
            <td class="">{{item.TongXuatTrongKy}}</td>
            <td class="">{{Math.abs((item.TongXuatDauKy - item.TongNhapDauKy) +  (item.TongXuatTrongKy - item.TongNhapTrongKy))}}</td>
        </tr>
    </tbody>

</table>

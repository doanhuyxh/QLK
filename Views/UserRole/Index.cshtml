@model AMS.Models.UserAccountViewModel.UpdateRoleViewModel

@{
    ViewData["Title"] = "Manage User Roles";
}


<div class="wrapper">
    <div class="top_content_heading">
        <div class="row">
            <div class="col-md-12">
                <div class="pull-left page-title">
                    <h3>Quản quyền truy cập trang</h3>
                </div>
                <div class="pull-right controlls">
                    <a href="javascript:void(0)" onclick="ManagePageAccessGeneral('@Model.ApplicationUserId')">
                        <div class="info-box">
                            <span class="info-box-icon bg-success elevation-1"><i class="fas fa-plus-square"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-number">
                                    Điều chỉnh quyền truy cập trang
                                </span>
                            </div>
                        </div>
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
    <br/>
    <input type="hidden" id="ApplicationUserId" asp-for="ApplicationUserId" />
    <table class="table table-bordered table-striped" border="1" id="tblUserRole">
        <thead>
            <tr>
                <th>SL</th>
                <th>Tên trang</th>
                <th>Truy cập</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
                @for (int i = 0; i < Model.listManageUserRolesViewModel.Count; i++)
                {
                    <tr>
                        <td>
                            @index
                        </td>
                        <td>
                            @Model.listManageUserRolesViewModel[i].RoleName
                        </td>
                        <td>
                            @if (@Model.listManageUserRolesViewModel[i].Selected)
                            {
                                <button class="btn btn-sm btn-info">
                                    <span>Yes</span>
                                    <i class="fa fa-check-circle" aria-hidden="true"></i>
                                </button>

                            }
                            else
                            {
                                <button class="btn btn-sm btn-danger">
                                    <span>No</span>
                                    <i class="fa fa-flag" aria-hidden="true"></i>
                                </button>
                            }
                        </td>
                    </tr>
                    index++;
                }
            }
        </tbody>
        <tfoot>
        </tfoot>
    </table>
</div>

<script src="~/js/UserManagement/UserManagement_CRUD.js"></script>

<script>
    $(document).ready(function () {
        $("#tblUserRole").DataTable({
        });
    });
</script>